<?xml version="1.0" encoding="utf-8"?>
<paths>
    <!-- External downloads directory for monitored voice messages -->
    <external-path
        name="downloads"
        path="Download/" />

    <!-- Common locations for voice messages from messaging apps -->
    <external-path
        name="whatsapp_voice"
        path="Android/media/com.whatsapp/WhatsApp/Media/WhatsApp Voice Notes/" />
    <external-path
        name="telegram"
        path="Telegram/" />
    <external-path
        name="signal"
        path="Signal/" />

    <!-- App's internal files directory (for model storage) -->
    <files-path
        name="internal"
        path="." />

    <!-- App's cache directory (for temporary audio processing) -->
    <cache-path
        name="cache"
        path="." />
</paths>
